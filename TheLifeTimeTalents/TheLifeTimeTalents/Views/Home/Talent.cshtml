                                                            text: data.responseText,
                                                            showHideTransition: 'slide',
                                                            bgColor: '#965d4d',
                                                            textColor: '#ffffff',
                                                            allowToastClose: false,
                                                            hideAfter: 3000,
                                                            stack: 5,
                                                            textAlign: 'left',
                                                            position: 'top-right'
                                                        })
                                                    }
                                                });

                                            }
                                            else {
                                                $.toast({
